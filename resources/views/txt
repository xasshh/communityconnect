    <div class="container">
        <h1>Discover Your Local Community</h1>
        <p>Explore places, activities, and events around you.</p>

        @foreach($places as $place)
            <div class="place">
                <h2>{{ $place['name'] }}</h2>
                <p><strong>Type:</strong> {{ $place['type'] }}</p>
                <p>{{ $place['description'] }}</p>
                <button onclick="learnMore('{{ $place['name'] }}')">Learn More</button>
