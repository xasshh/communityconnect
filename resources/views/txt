<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upcoming Events</title>
    <!-- Include jQuery (or use Vue.js or another library) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Upcoming Events</h1>

    <!-- Filters -->
    <div>
        <input type="text" id="filter-name" placeholder="Search by event name">
        <input type="date" id="filter-date">
        <button id="filter-btn">Filter Events</button>
    </div>

    <!-- Events List -->
    <div id="events-list">
        <!-- Events will be loaded here dynamically -->
    </div>

    <!-- JavaScript for Real-Time Filtering and Joining Events -->
    <script>
        $(document).ready(function() {
            // Fetch events initially
            fetchEvents();

            // Fetch events based on filters
            $('#filter-btn').click(function() {
                fetchEvents();
            });

            // Function to fetch events with filters
            function fetchEvents() {
                var name = $('#filter-name').val();
                var date = $('#filter-date').val();

                $.ajax({
                    url: "{{ route('events.fetch') }}",
                    method: 'GET',
                    data: {
                        name: name,
                        date: date
                    },
                    success: function(events) {
                        var eventsList = $('#events-list');
                        eventsList.empty(); // Clear current events

                        if(events.length > 0) {
                            $.each(events, function(index, event) {
                                eventsList.append(`
                                    <div>
                                        <h2>${event.name}</h2>
                                        <p>${event.description}</p>
                                        <p><strong>Date:</strong> ${new Date(event.event_date).toLocaleString()}</p>
                                        <p><strong>Location:</strong> ${event.location}</p>
                                        <button onclick="joinEvent(${event.id})">Join Event</button>
                                    </div>
                                `);
                            });
                        } else {
                            eventsList.append('<p>No events found</p>');
                        }
                    }
                });
            }

            // Function to join an event
            window.joinEvent = function(eventId) {
                $.ajax({
                    url: `/events/join/${eventId}`,
                    method: 'POST',
                    headers: {
                        'X-CSRF-TOKEN': '{{ csrf_token() }}'
                    },
                    success: function(response) {
                        alert(response.message);
                    }
                });
            }
        });
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="{{ str_replace('_', '-', app()->getLocale()) }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Community Connect</title>
    <script src="https://maps.googleapis.com/maps/api/js?key={{ env('GOOGLE_MAPS_API_KEY') }}&callback=initMap"></script>
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
        .marker-cluster {
            background-color: #f00;
            border-radius: 50%;
            display: inline-block;
            margin: 10px;
            padding: 0;
            position: relative;
        }
        .marker-cluster-small {
            width: 20px;
            height: 20px;
        }
        .marker-cluster-medium {
            width: 40px;
            height: 40px;
        }
        .marker-cluster-large {
            width: 60px;
            height: 60px;
        }
    </style>
