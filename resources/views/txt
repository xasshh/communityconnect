            <!-- Joined Events -->
            <div class="col-sm-4">
                <div class="well">
                    <strong><h1>YOUR JOINED EVENTS</h1></strong>
                    @if($joinedEvents->isEmpty())
                        <p>You haven't joined any events yet.</p>
                    @else
                        <ol class="list-unstyled">
                            @foreach($joinedEvents as $event)
                                <li><strong>Event Name: {{ $event->title }}</strong></li>
                            @endforeach
                        </ol>
                    @endif
                </div>
            </div>

            <!-- Created Events -->
            <div class="col-sm-4">
                <div class="well">
                    <strong><h1>YOUR CREATED EVENTS</h1></strong>
                    @forelse($createdEvents as $event)
                        <div class="card">
                            <div class="card-header"><h3>{{ $event->title }}</h3></div>
                            <div class="card-body">
                                <h1>Joined Users:</h1>
                                @if($event->users->isEmpty())
                                    <p>No users have joined this event yet.</p>
                                @else
                                    <ul>
                                        @foreach($event->users as $user)
                                            <li>{{ $user->name }} ({{ $user->email }})</li>
                                        @endforeach
                                    </ul>
                                @endif
                            </div>
                        </div>
                    @empty
                        <p>You haven't created any events yet.</p>
                    @endforelse
                </div>
            </div>

            <!-- RSVPs -->
            <div class="col-sm-4">
                <div class="well">
                    <strong><h1>YOUR RSVPs</h1></strong>
                    @if($reservations->isEmpty())
                        <p>You haven't made any RSVPs yet.</p>
                    @else
                        <ul class="list-unstyled">
                            @foreach($reservations as $reservation)
                                <li>
                                    <strong>{{ ucfirst(str_replace('-', ' ', $reservation->space)) }}</strong>
                                    on {{ \Carbon\Carbon::parse($reservation->date)->format('F j, Y') }}
                                    <div class="mt-2">
                                        <form action="{{ route('rsvp.cancel', $reservation->id) }}" method="POST" style="display:inline;">
                                            @csrf
                                            @method('DELETE')
                                            <button type="submit" class="text-danger">Cancel</button>
                                        </form>
                                        <a href="{{ route('rsvp.Edit', $reservation->id) }}" class="text-link">Edit</a>
                                    </div>
                                </li>
                            @endforeach
                        </ul>
                    @endif
                </div>
            </div>

            <!-- New Messages -->
            <div class="col-sm-4">
                <div class="well">
                    <strong><h1>NEW MESSAGES</h1></strong>
                    @if(Auth::user()->unreadNotifications->count())
                        <ul class="list-unstyled">
                            @foreach(Auth::user()->unreadNotifications as $notification)
                                <li>
                                    <strong>{{ $notification->data['sender_name'] }}</strong>: "{{ $notification->data['message'] }}"
                                    <form action="{{ route('notifications.delete', $notification->id) }}" method="POST" style="display:inline;">
                                        @csrf
                                        @method('DELETE')
                                        <button type="submit" class="text-danger">Delete</button>
                                    </form>
                                </li>
                            @endforeach
                        </ul>
                    @else
                        <p>No new messages.</p>
                    @endif
                </div>
            </div>
        </div>
    </div>
