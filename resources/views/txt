<body>
    <div id="map"></div>

    <script>
        var map;
        var markers = [];
        var marks = [];

        function initMap() {
            const mapOptions = {
                center: {lat: 40.7128, lng: -74.0060},
                zoom: 12,
                styles: [
                    {
                        featureType: "all",
                        elementType: "geometry",
                        stylers: [{color: "#f5f5f5"}]
                    },
                    {
                        featureType: "road.local",
                        elementType: "labels.text.stroke",
                        stylers: [{color: "#999999"}]
                    }
                ]
            };

            map = new google.maps.Map(document.getElementById("map"), mapOptions);

            loadMarkers();
        }

        function loadMarkers() {
            // Fetch events from the controller
            fetch('/events')
                .then(response => response.json())
                .then(data => addMarkers(data.events));
        }

        function addMarker(event) {
            var markerLatlng = new google.maps.LatLng(parseFloat(event.latitude), parseFloat(event.longitude));

            var mark = new google.maps.Marker({
                map: map,
                position: markerLatlng,
                title: event.title,
                icon: getIconByCategory(event.category)
            });

            marks.push(mark);
            markers.push(event);

            google.maps.event.addListener(mark, 'click', function() {
                showInfoWindow(this, event);
            });
        }

        function getIconByCategory(category) {
            switch (category.toLowerCase()) {
                case 'volunteering':
                    return 'https://chart.googleapis.com/chart?size=21x21&color=%230000ff&fillcolor=%23f00&chst=d_map_pin_letter&chld=v';
                case 'arts':
                    return 'https://chart.googleapis.com/chart?size=21x21&color=%230000ff&fillcolor=%23f00&chst=d_map_pin_letter&chld=a';
                case 'sports':
                    return 'https://chart.googleapis.com/chart?size=21x21&color=%230000ff&fillcolor=%23f00&chst=d_map_pin_letter&chld=s';
                default:
                    return 'https://chart.googleapis.com/chart?size=21x21&color=%230000ff&fillcolor=%23f00&chst=d_map_pin_letter&chld=%25';
            }
        }

        function showInfoWindow(marker, event) {
            var infowindow = new google.maps.InfoWindow();

            var html = `
                <h3>${event.title}</h3>
                <p>Date: ${event.date}</p>
                <p>Time: ${event.time}</p>
                <p>Location: ${event.location}</p>
                <button onclick="window.open('${route('event.show', ['id' => event.id])}', '_blank')">View Event</button>
            `;

            infowindow.setContent(html);
            infowindow.open(map, marker);
        }

        function clusterizeMarkers() {
            var markerCluster = new MarkerClusterer(map, marks, {
                gridSize: 80,
                maxZoom: 15
            });
        }

        window.onload = initMap;
    </script>
</body>
</html>
